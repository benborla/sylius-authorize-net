<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
</container>

<service id="app.sylius_payment" class="Payum\Core\Bridge\Symfony\Builder\GatewayFactoryBuilder">
    <argument>BenBorla\AuthorizeNetPlugin\Payum\AuthorizeNetPaymentGatewayFactory</argument>
    <tag name="payum.gateway_factory_builder" factory="authorize_net" />
</service>
<service id="BenBorla\AuthorizeNetPlugin\Form\Type\AuthorizeNetGatewayConfigurationType">
    <tag name="sylius.gateway_configuration_type" type="authorize_net" label="Authorize.net" />
    <tag name="form.type" />
</service>

